---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const fieldNotes = await getCollection('field-notes');
  return fieldNotes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

interface Props {
  note: CollectionEntry<'field-notes'>;
}

const { note } = Astro.props;
const { Content } = await note.render();
---

<BaseLayout 
  title={note.data.title} 
  description={note.data.description}
>
  <article class="post-article">
    <div class="container">
      <header class="post-header">
        <div class="post-meta">
          <time datetime={note.data.pubDate.toISOString()}>
            {note.data.pubDate.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </time>
          {note.data.tags && note.data.tags.length > 0 && (
            <div class="post-tags">
              {note.data.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
        </div>
        <h1>{note.data.title}</h1>
      </header>
      
      <div class="content">
        <Content />
      </div>
      
      <footer class="post-footer">
        <a href="/field-notes">‚Üê Back to Field Notes</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .post-article {
    padding: var(--space-2xl) 0;
  }

  .post-article .container {
    max-width: 700px;
  }

  .post-header {
    margin-bottom: var(--space-xl);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .post-meta time {
    font-size: 0.9rem;
    color: var(--color-ink-secondary);
  }

  .post-tags {
    display: flex;
    gap: var(--space-xs);
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: var(--color-paper-dark);
    color: var(--color-ink-secondary);
    border-radius: 4px;
  }

  .post-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  /* Content styles */
  :global(.post-article .content) {
    line-height: 1.8;
  }

  :global(.post-article .content h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
  }

  :global(.post-article .content h3) {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
  }

  :global(.post-article .content p) {
    margin-bottom: var(--space-md);
  }

  :global(.post-article .content ul),
  :global(.post-article .content ol) {
    margin-bottom: var(--space-md);
    padding-left: var(--space-lg);
  }

  :global(.post-article .content li) {
    margin-bottom: var(--space-xs);
  }

  :global(.post-article .content img) {
    width: 100%;
    max-width: 100%;
    height: auto;
    margin-top: 4rem !important;
    margin-bottom: 5rem !important;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgba(21, 21, 21, 0.12);
    display: block;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .post-article {
      padding: var(--space-xl) 0;
    }

    :global(.post-article .content img) {
      margin-top: 3rem !important;
      margin-bottom: 4rem !important;
      border-radius: 6px;
    }
  }
</style>
