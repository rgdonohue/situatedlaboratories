---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const studyMaterials = await getCollection('study', ({ data }) => {
    return !data.draft;
  });
  return studyMaterials.map((item) => ({
    params: { slug: item.slug },
    props: { item },
  }));
}

interface Props {
  item: CollectionEntry<'study'>;
}

const { item } = Astro.props;
const { Content } = await item.render();
---

<BaseLayout 
  title={item.data.title} 
  description={item.data.description}
>
  <article class="study-article">
    <div class="container">
      <header class="study-header">
        <span class="study-category">{item.data.category}</span>
        <h1>{item.data.title}</h1>
      </header>
      
      <div class="content">
        <Content />
      </div>
      
      <footer class="study-footer">
        <a href="/study">‚Üê Back to Study</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .study-article {
    padding: var(--space-2xl) 0;
  }

  .study-article .container {
    max-width: 700px;
  }

  .study-header {
    margin-bottom: var(--space-xl);
  }

  .study-category {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-forest);
    color: var(--color-paper);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: 4px;
    margin-bottom: var(--space-sm);
  }

  .study-footer {
    margin-top: var(--space-2xl);
    padding-top: var(--space-xl);
    border-top: 1px solid var(--color-border);
  }

  /* Content styles */
  .content {
    line-height: 1.8;
  }

  /* Major section headings (H2) */
  .content h2 {
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .content h2:first-of-type {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }

  /* Subsection headings (H3) */
  .content h3 {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-sm);
  }

  /* Paragraphs */
  .content p {
    margin-bottom: var(--space-lg);
  }

  /* Bold subheadings (like "What this means in practice:") */
  .content p strong {
    display: block;
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    font-weight: 600;
  }

  .content p:first-of-type strong {
    margin-top: 0;
  }

  /* Lists */
  .content ul,
  .content ol {
    margin-top: var(--space-sm);
    margin-bottom: var(--space-lg);
    padding-left: var(--space-lg);
  }

  .content li {
    margin-bottom: var(--space-sm);
    line-height: 1.7;
  }

  .content li:last-child {
    margin-bottom: 0;
  }

  /* Spacing after lists before next section */
  .content ul + h2,
  .content ol + h2 {
    margin-top: var(--space-2xl);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .study-article {
      padding: var(--space-xl) 0;
    }
  }
</style>

